{
  "name": "Extensión de Chrome para OpenAI ChatGPT",
  "version": "2.1.1",
  "description": "Ten una experiencia fluida con ChatGPT o genera imágenes impresionantes, todo sin tener que abandonar tu sitio web favorito.",
  "default_locale": "es",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "host_permissions": ["https://api.openai.com/v1/completions"],
  "permissions": ["storage", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "manifest_version": 3
}
